# Database
DATABASE_URL=postgresql://nearbyindex:nearbyindex@localhost:5432/nearbyindex

# Map
NEXT_PUBLIC_MAPTILER_KEY=
NEXT_PUBLIC_MAP_STYLE_URL=https://tiles.openfreemap.org/styles/liberty

# POI Provider: localdb (default, uses Overture data) or overpass (real-time API)
POI_PROVIDER=localdb

# Providers (server-side only)
NOMINATIM_USER_AGENT=nearbyindex/1.0
OVERPASS_API_URL=https://overpass-api.de/api/interpreter

# App
NEXT_PUBLIC_DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,de,es,fr

# Jobs (background processing)
CRON_SECRET=your-secret-here
MAX_CONCURRENT_JOBS=1
HEATMAP_CHUNK_SIZE=50

# Worker (for Railway/Render - alternative to Vercel Cron)
WORKER_POLL_INTERVAL=60000
# Chunk size: cells processed per iteration
# With batch processing (POIs loaded in memory), 500-1000 is recommended
WORKER_CHUNK_SIZE=500
